<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_article_complete_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/single_article_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_happiness" />

    <TextView
        android:id="@+id/single_article_heading"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/single_article_image"
        android:padding="8dp"
        android:text="Phase 3 Efficacy Trial of Modified Vaccinia Ankara as a Vaccine against Smallpox"
        android:textColor="@android:color/black"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/single_article_docname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_article_heading"
        android:layout_marginLeft="16dp"
        android:text="Dummy Doctor"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_article_docname"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/single_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:text="Date"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/single_article_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/single_article_date"
            android:text="\u22C5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/single_article_readtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/single_article_seperator"
            android:text="Read Time"
            android:textSize="12sp" />


    </RelativeLayout>


</RelativeLayout>