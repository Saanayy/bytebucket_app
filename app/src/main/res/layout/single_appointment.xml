<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp">



    <RelativeLayout
        android:id="@+id/single_appointment_date_layout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:background="@drawable/textbox_background"
        >


        <TextView
            android:id="@+id/single_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:text="18"/>

        <TextView
            android:id="@+id/single_appointment_month"
            android:layout_below="@+id/single_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:text="Nov, 2019"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/single_appointment_date_layout"

        >

        <ImageView
            android:id="@+id/single_appointment_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/single_appointment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:text="Status" />


        <RelativeLayout
            android:id="@+id/single_appointment_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/single_appointment_status">


            <TextView
                android:id="@+id/single_appointment_detail_docname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Doctor Name"
                android:textSize="16sp"
                android:ellipsize="end"
                android:padding="2dp"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/single_appointment_detail_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_appointment_detail_docname"
                android:text="Speciality"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:ellipsize="end"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/single_appointment_detail_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_appointment_detail_speciality"
                android:text="Sample Problem Detail"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:lines="2"
                android:ellipsize="end"
                android:padding="2dp"/>

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>